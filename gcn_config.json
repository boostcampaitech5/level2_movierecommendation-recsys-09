{   
    "name": "movie_UltraGCN",
    "n_gpu": 1,

    "arch": {
        "type": "UltraGCN",
        "args": {
            "data_dir": "/opt/ml/input/data/train/",
            "user_num": 31360,
            "item_num": 6807,
            "embedding_dim": 64,
            "gamma": 1e-4,
            "lambda": 0.8
        }
    },
    "data_loader": {
