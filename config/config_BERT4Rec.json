{
    "name": "BERT4Rec",
    "n_gpu": 1,
    
    "wandb": false,
    "wandb_name" : "BERT4Rec",
    "wandb_sweep": false,
    "arch": {
        "type": "BERT4Rec",
        "args": {
            "hidden_units" : 256,
            "num_heads" : 1,
            "num_layers" :2,
            "dropout_rate" : 0.5,
            "device" : "cuda",
            "num_user" : 31360,
            "num_item" : 6807,
            "max_len" : 50
        }
    },
    "data_loader": {
        "type": "BERT4RecDataLoader",
        "args":{
            "data_dir": "/opt/ml/input/data/",
            "num_user" : 31360,
            "num_item" : 6807,
            "max_len" : 50,
            "mask_prob" : 0.15,
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "CE_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "/opt/ml/input/saved/BERT4Rec",
        "model_path": "model.pkl",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "test": {
        "model_dir": "/opt/ml/input/saved/BERT4Recmodel.pkl",
        "output_dir": "/opt/ml/input/output/BERT4Rec_submission.csv"
    },
    "sweep_configuration": {
        "method": "grid",
        "name": "sweep",
        "metric": {
            "goal": "minimize", 
            "name": "loss"
            },
        "parameters": {
            "hidden_units": {"values": [100, 128, 256]},
            "num_heads" : {"values": [1, 2, 4]}
        }
    }
}
